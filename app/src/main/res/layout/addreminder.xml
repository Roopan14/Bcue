<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearadd"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        >


        <LinearLayout
            android:background="@drawable/edtbackground"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="5">

            <Spinner
                android:id="@+id/reminderspinner"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">

            </Spinner>


        </LinearLayout>


        <EditText
            android:id="@+id/nameet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:hint="Event's or Person's Name"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/grey"
            />


        <EditText
            android:id="@+id/infoet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:hint="Additional Info"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/grey"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/dobet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:hint="Event Date"
            android:focusable="false"
            android:textColor="@color/blue"
            android:textColorHint="@color/grey"
            android:editable="false"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textColor="#595d63"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:id="@+id/priorityimg"
                android:src="@drawable/star"
                android:contentDescription="nonpriority"
                android:tint="@color/blue"

                />

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Notify you about the event the day before also."
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />


    </LinearLayout>

    <Button
        android:layout_below="@id/linearadd"
        android:id="@+id/addBT"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Add"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        />

</RelativeLayout>