<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listviewholder"
    android:layout_margin="5dp"
    >
    
    <LinearLayout
        android:id="@+id/holderlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        
        <LinearLayout
            android:layout_width="0dp"
            android:weightSum="3"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/eventnametv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="#6098f2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:id="@+id/eventtypetv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:id="@+id/eventtime"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#797b7f"
                android:text="Info"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:id="@+id/eventinfotv"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/remtype"
                android:layout_centerInParent="true"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/cake"
                />

            <ImageView
                android:id="@+id/priorityev"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/remtype"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/colostar"
                />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>